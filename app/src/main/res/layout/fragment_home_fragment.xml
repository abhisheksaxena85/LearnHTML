<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#00FEC300"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".home_fragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:paddingLeft="15dp"
                android:paddingRight="10dp"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                android:background="@drawable/head_background"
                android:layout_height="270dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="170dp">

                    <TextView
                        android:layout_width="140dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:layout_weight="1"
                        android:textAlignment="textStart"
                        android:gravity="center"
                        android:text="HTML Basics, and Advanced for Web Development"
                        android:textColor="@color/white"
                        android:fontFamily="@font/alata"
                        android:textStyle="bold"
                        android:textSize="25sp"
                        tools:ignore="RtlCompat" />

                    <ImageView
                        android:layout_width="170dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/blog"/>

                </LinearLayout>





            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="25dp"
                android:layout_marginLeft="12dp"
                android:gravity="left">
                <androidx.cardview.widget.CardView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:cardElevation="0dp"
                    android:elevation="0dp"
                    android:backgroundTint="#419051FF"
                    app:cardCornerRadius="35dp">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="4dp"
                        android:src="@drawable/html_file"/>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:fontFamily="@font/varelaroundregular"
                    android:gravity="left|center"
                    android:text="HTML Guide :"
                    android:textColor="#000000"
                    android:textSize="25sp"
                    android:textStyle="bold" />

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#4CD2D2D2"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:backgroundTint="@color/white"
                app:cardElevation="8dp"
                android:id="@+id/card1_main"
                android:soundEffectsEnabled="true"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                app:cardUseCompatPadding="true"
                app:cardCornerRadius="5dp"
                android:layout_height="120dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginRight="12dp"
                    android:layout_marginTop="4dp"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="4dp"
                    android:layout_marginLeft="14dp">
                    <ImageView
                        android:layout_width="70dp"
                        android:src="@drawable/html_first_card"
                        android:layout_height="70dp"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginLeft="7dp"
                        android:gravity="center|left">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/varelaroundregular"
                            android:text="1. HTML Tutorial"
                            android:textColor="@color/black"
                            android:textSize="19sp"
                            android:textStyle="bold" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/varelaroundregular"
                            android:text="37 Lectures"
                            android:textColor="#6F232323"
                            android:textSize="13sp" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/forward"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:backgroundTint="@color/white"
                app:cardElevation="8dp"
                android:soundEffectsEnabled="true"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:id="@+id/card2_main"
                app:cardUseCompatPadding="true"
                app:cardCornerRadius="5dp"
                android:layout_height="120dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginRight="12dp"
                    android:layout_marginTop="4dp"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="4dp"
                    android:layout_marginLeft="14dp">
                    <ImageView
                        android:layout_width="70dp"
                        android:src="@drawable/html__2_"
                        android:layout_height="50dp"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginLeft="7dp"
                        android:gravity="center|left">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/varelaroundregular"
                            android:text="2. HTML Attributes"
                            android:textColor="@color/black"
                            android:textSize="19sp"
                            android:textStyle="bold" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/varelaroundregular"
                            android:text="2 Lectures"
                            android:textColor="#6F232323"
                            android:textSize="13sp" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/forward"/>


                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:backgroundTint="@color/white"
                app:cardElevation="8dp"
                android:soundEffectsEnabled="true"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:id="@+id/card3_main"
                app:cardUseCompatPadding="true"
                app:cardCornerRadius="5dp"
                android:layout_height="120dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginRight="12dp"
                    android:layout_marginTop="4dp"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="4dp"
                    android:layout_marginLeft="12dp">
                    <ImageView
                        android:layout_width="70dp"
                        android:src="@drawable/html__3_"
                        android:layout_height="50dp"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginLeft="9dp"
                        android:gravity="center|left">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/varelaroundregular"
                            android:text="3. HTML Tag list"
                            android:textColor="@color/black"
                            android:textSize="19sp"
                            android:textStyle="bold" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/varelaroundregular"
                            android:text="97 Lectures"
                            android:textColor="#6F232323"
                            android:textSize="13sp" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/forward"/>


                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:backgroundTint="@color/white"
                app:cardElevation="8dp"
                android:soundEffectsEnabled="true"
                android:id="@+id/card4_main"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                app:cardUseCompatPadding="true"
                app:cardCornerRadius="5dp"
                android:layout_height="120dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginRight="12dp"
                    android:layout_marginTop="4dp"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="4dp"
                    android:layout_marginLeft="14dp">
                    <ImageView
                        android:layout_width="70dp"
                        android:src="@drawable/html__4_"
                        android:layout_height="50dp"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginLeft="7dp"
                        android:gravity="center|left">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/varelaroundregular"
                            android:text="4. HTML5 Advance"
                            android:textColor="@color/black"
                            android:textSize="19sp"
                            android:textStyle="bold" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/varelaroundregular"
                            android:text="12 Lectures"
                            android:textColor="#6F232323"
                            android:textSize="13sp" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/forward"/>


                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:backgroundTint="@color/white"
                android:id="@+id/card5_main"
                app:cardElevation="8dp"
                android:soundEffectsEnabled="true"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                app:cardUseCompatPadding="true"
                app:cardCornerRadius="5dp"
                android:layout_height="120dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginRight="12dp"
                    android:layout_marginTop="4dp"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="4dp"
                    android:layout_marginLeft="14dp">
                    <ImageView
                        android:layout_width="70dp"
                        android:src="@drawable/html_logo"
                        android:layout_height="45dp"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginLeft="7dp"
                        android:gravity="center|left">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/varelaroundregular"
                            android:text="5. HTML API"
                            android:textColor="@color/black"
                            android:textSize="19sp"
                            android:textStyle="bold" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/varelaroundregular"
                            android:text="5 Lectures"
                            android:textColor="#6F232323"
                            android:textSize="13sp" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/forward"/>


                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:backgroundTint="@color/white"
                app:cardElevation="8dp"
                android:id="@+id/card6_main"
                android:soundEffectsEnabled="true"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                app:cardUseCompatPadding="true"
                app:cardCornerRadius="5dp"
                android:layout_height="120dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginRight="12dp"
                    android:layout_marginTop="4dp"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="4dp"
                    android:layout_marginLeft="12dp">
                    <ImageView
                        android:layout_width="70dp"
                        android:src="@drawable/html_main_title"
                        android:layout_height="60dp"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginLeft="9dp"
                        android:gravity="center|left">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/varelaroundregular"
                            android:text="6. HTML Color Names"
                            android:textColor="@color/black"
                            android:textSize="19sp"
                            android:textStyle="bold" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/varelaroundregular"
                            android:text="1 Lectures"
                            android:textColor="#6F232323"
                            android:textSize="13sp" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/forward"/>
                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>

</FrameLayout>